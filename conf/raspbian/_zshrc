case $(cat /etc/hostname 2> /dev/null) in
    host1)
        case $(lsb_release -rs 2> /dev/null) in
            *)
                ;;
        esac
        ;;
    *)
        ;;
esac

export PATH=~/opt/rtools/bin:~/opt/rtools/bin/raspbian:$PATH

# Zsh
case $TERM in
    xterm*)
        bindkey '^[[H' beginning-of-line
        bindkey '^[[F' end-of-line
        ;;
esac
unset LESS

# Rust
if [ -d "$HOME/.cargo" ]; then
    . "$HOME/.cargo/env"
fi

export _ZSHRC_LOADED_=1
