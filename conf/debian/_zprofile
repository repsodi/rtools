. ${HOME}/opt/rtools/bin/detect-os > /dev/null

case ${os_version} in
    *)
        case $(hostname) in
            *)
                ;;
        esac
        ;;
esac

export PATH=~/opt/rtools/bin/${os_name}:~/opt/rtools/bin:$PATH

# Zsh
case $TERM in
    xterm*)
        bindkey "^[[H" beginning-of-line
        bindkey "^[[F" end-of-line
        ;;
esac

# Rust
if [ -d "$HOME/.cargo" ]; then
    . "$HOME/.cargo/env"
fi

export _LOADED_ZPROFILE_=1
