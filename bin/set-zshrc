#!/bin/sh

. $(dirname $0)/detect-os

file=${HOME}/.zshrc
config=${HOME}/opt/rtools/conf/${os_name}/_zshrc

if [ ! -f ${file}.ori ]; then
    echo "Creating ${file}.ori..."
    cp -p ${file} ${file}.ori
else
    echo "${file}.ori exists."
fi

cp -p ${file}.ori ${file}
echo "" >> ${file}
echo "# repsodi" >> ${file}
echo "source ${config}" >> ${file}
echo "${file} has been generated."
ls -la ${file}*
