#!/bin/sh

. $(dirname $0)/detect-os

file=${HOME}/.profile
config=${HOME}/opt/rtools/conf/${os_name}/_profile

if [ ! -f ${file}.ori ]; then
    echo "Creating ${file}.ori..."
    cp -p ${file} ${file}.ori
else
    echo "${file}.ori exists."
fi

cat ${file}.ori ${config} > ${file}
echo "${file} has been generated."
ls -la ${file}*
