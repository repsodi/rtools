#!/bin/sh

export OS_VER=raspbian9
export FILE=$HOME/.profile
export CONFIG=$HOME/opt/rtools/conf/$OS_VER/_profile

if [ ! -f $FILE.ori ]; then
    echo "Creating $FILE.ori..."
    cp --preserve=timestamps $FILE $FILE.ori
else
    echo "$FILE.ori exists."
fi

cat $FILE.ori $CONFIG > $FILE
echo "$FILE has been generated."
ls -la $FILE*
