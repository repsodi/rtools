#!/bin/sh

export OS_VER=raspbian_st

# Display
sudo cp ~/opt/rtools/conf/$OS_VER/lcd/cmdline.txt.ori /boot/cmdline.txt
sudo cp ~/opt/rtools/conf/$OS_VER/lcd/config.txt.5inch /boot/config.txt
sudo cp ~/opt/rtools/conf/$OS_VER/lcd/console-setup.ori /etc/default/console-setup
sudo cp ~/opt/rtools/conf/$OS_VER/lcd/modules.ori /etc/modules

# Touch
sudo cp ~/opt/rtools/conf/$OS_VER/lcd/99-fbturbo.conf.ori /usr/share/X11/xorg.conf.d/99-fbturbo.conf
sudo rm -f /etc/X11/xorg.conf.d/99-ads7846-cal.conf
sudo rm -f /etc/X11/xorg.conf.d/99-calibration.conf
if [ -d "/etc/X11/xorg.conf.d" ]
then
    sudo rmdir /etc/X11/xorg.conf.d
fi
