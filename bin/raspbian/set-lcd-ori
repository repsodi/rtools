#!/bin/sh

sudo sed -i 's/#overscan_left=16/overscan_left=1/g' /boot/config.txt
sudo sed -i 's/#overscan_right=16/overscan_right=1/g' /boot/config.txt
sudo sed -i 's/#hdmi_group=1/hdmi_group=2/g' /boot/config.txt
sudo sed -i 's/#hdmi_mode=1/hdmi_mode=87/g' /boot/config.txt
sudo sed -i 's/#hdmi_drive=2/hdmi_drive=2\
\
hdmi_cvt=800 480 60 6/g' /boot/config.txt
