#!/bin/bash

if [ -z "${1}" ] || [ -z "${2}" ] || [ -z "${3}" ] || [ -z "${4}" ] || [ -z "${5}" ]; then
    echo "Usage: $(basename $0) <git-username> <git-email> <samba-username> <pi-wifi-enable|pi-wifi-disable> <wifi-psk>"
    exit
fi

. $(dirname $0)/../env.conf
echo

. $(dirname $0)/../../conf/shell/profile 2> /dev/null
. $(dirname $0)/../../conf/shell/rc 2> /dev/null

set-profile
echo
set-bashrc
echo
set-gitconfig ${1} ${2}
echo
set-samba ${3}
echo
set-raspbian-wifi ${4} ${5}
