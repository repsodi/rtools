#!/bin/sh

. detect-os

file=/etc/samba/smb.conf
config=${HOME}/opt/rtools/conf/${os_name}/smb.conf

if [ ! -f ${file}.ori ]; then
    echo "Creating ${file}.ori..."
    sudo cp -p ${file} ${file}.ori
else
    echo "${file}.ori exists."
fi

echo "cat ${file}.ori ${config} > ${file}" | sudo -Es
echo "${file} has been generated."
ls -la ${file}*
