#!/bin/sh

. $(dirname $0)/../var

file=/etc/default/locale

if [ ! -f ${file}.ori ]; then
    echo "Creating ${file}.ori..."
    sudo cp -p ${file} ${file}.ori
else
    echo "${file}.ori exists."
fi

sudo rm ${file}
sudo update-locale LANG=en_US.UTF-8
echo "${file} has been generated."
ls -la ${file}*
# cat ${file}
