#!/bin/bash

if [ -z "${1}" ] || [ -z "${2}" ] || [ -z "${3}" ]; then
    echo "Usage: $(basename $0) <git-username> <git-email> <samba-username>"
    exit
fi

. $(dirname $0)/../env.conf
echo

. $(dirname $0)/../../conf/shell/profile 2> /dev/null
. $(dirname $0)/../../conf/shell/rc 2> /dev/null

set-profile
echo
set-bashrc
echo
set-gitconfig ${1} ${2}
echo
set-smb ${3}
echo
set-usergroups-enab
echo
set-locale
